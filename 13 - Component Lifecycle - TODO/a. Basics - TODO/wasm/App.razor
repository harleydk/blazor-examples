<Hello Name=@name />

@code {
  private string name = "A";

  protected override async Task OnAfterRenderAsync(bool firstRender)
  {
    if (firstRender)
    {
      await Task.Delay(100);
      Console.WriteLine("-- -- new prop --");
      name = "B";
      StateHasChanged();
    }
  }

}
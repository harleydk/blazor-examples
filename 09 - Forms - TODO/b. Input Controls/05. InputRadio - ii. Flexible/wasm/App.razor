<EditForm Model="demoModel">
    <InputRadioGroup @bind-Value="demoModel.Value">
        @foreach (var option in (Options[])Enum.GetValues(typeof(Options)))
        {
            <InputRadio Value="option" id="@option" />
            <label for="@option">@option</label>
            <br>
        }
    </InputRadioGroup>
</EditForm>

@demoModel.Value

@code {
    private DemoModel demoModel = new DemoModel();
}
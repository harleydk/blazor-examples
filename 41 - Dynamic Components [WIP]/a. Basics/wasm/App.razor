<!-- https://docs.microsoft.com/en-us/aspnet/core/blazor/components/dynamiccomponent?view=aspnetcore-6.0 -->

<label>
    <input type="radio" value="dutch" />
    Dutch
</label>
<label>
    <input type="radio" value="english" />
    English
</label>
<label>
    <input type="radio" value="spanish" />
    Spanish
</label>

    <InputRadioGroup @bind-Value="language">
        <label>
            <InputRadio Value="@(typeof(GreetingDutch))" />
            Dutch
        </label>
        <label>
            <InputRadio Value="@(typeof(GreetingEnglish))" />
            English
        </label>
        <label>
            <InputRadio Value="@(typeof(GreetingSpanish))" />
            Spanish
        </label>
    </InputRadioGroup>

<div style="background: bisque">
    <DynamicComponent Type="@language" />
</div>

@code {
    private Type language;
}
<input @onchange="HandleChange">

@code {
  // Event
  [Parameter]
  public EventCallback<string> OnClickCallback { get; set; }

  private void HandleChange(ChangeEventArgs e)
  {
    this.OnClickCallback.InvokeAsync(e.Value.ToString());
  }
}